<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:baselineAligned="false"

    android:layout_width="fill_parent"

    android:layout_height="fill_parent"

    android:orientation="horizontal">


    <!-- FRAGMENT: movie_list_fragment.xml -->

    <fragment

        android:id="@+id/fragment1"

        class="com.missouristate.bryson.finalp.MyListFragment"

        android:layout_width="0dp"

        android:layout_height="match_parent"


        android:layout_weight="1"

        android:clipToPadding="false"
        tools:layout="@layout/movie_list_fragment">

    </fragment>


    <!-- FRAGMENT: information_fragment.xml -->

    <fragment

        android:id="@+id/fragment2"

        android:layout_width="0dp"

        android:layout_weight="2"

        android:layout_height="match_parent"

        class="com.missouristate.bryson.finalp.InformationFragment"

        tools:layout="@layout/information_fragment">


    </fragment>


</LinearLayout>